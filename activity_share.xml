<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareActivity"
    >

    <EditText
        android:id="@+id/editText_getPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a phone number"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:inputType="phone" />

    <Button
        android:id="@+id/button_makeCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_getPhoneNum"
        android:layout_centerHorizontal="true"
        android:text="make A Call"
        />

    <Button
        android:id="@+id/button_sendMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button_makeCall"
        android:layout_below="@id/button_makeCall"
        android:text="Send A message"
        />

    <Button
        android:id="@+id/button_searchBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button_sendMsg"
        android:layout_below="@id/button_sendMsg"
        android:layout_centerVertical="true"
        android:text="Nearby Basketball!"
        />

</RelativeLayout>
